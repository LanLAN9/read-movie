.post-first{
  width: 100%;
  height: 90rpx;
  display: flex;
  line-height: 90rpx;
}

.post-first-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-top:8px;
  margin-left: 20rpx;
}

.post-first-text{
  font-size: 26rpx;
  margin-left: 40rpx;
  vertical-align: middle;
}

.post-second{
  width: 100%;
  margin-top:2px;
  margin-bottom: 6px; 
}

.post-second-title{
  margin-left: 20rpx;
  font-size: 36rpx;
  font-weight: 600;
}

.post-third{
  width: 100%;
  height: 350rpx;
}

.post-third-illustration{
  height: 350rpx;
  width: 100%;

}

.post-fourth{
  margin-left: 20rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  color: rgb(83, 83, 83);
}

.post-fifth{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60rpx;
  vertical-align: middle;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.post-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.post-num{
  font-size: 26rpx;
  color: #bfbfbf;
  margin-right: 10rpx;  
}