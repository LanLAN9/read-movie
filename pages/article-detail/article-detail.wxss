.articledetail>.likeornot>.img1 {
  width: 110rpx;
  height: 85rpx;
}

.articledetail>.likeornot>.img2 {
  width: 45rpx;
  height: 45rpx;
  background-color: lightskyblue;
  padding: 15rpx;
  border-radius: 50%;
  margin-bottom: 6rpx;
}

.articledetail>.article {
  font-size: 30rpx;
  text-indent: 1rem;
  letter-spacing: 0.15rem;
  color: rgb(83, 83, 83);
  margin-bottom: 30rpx;
}
