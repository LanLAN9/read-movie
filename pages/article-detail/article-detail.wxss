/* pages/article-detail/article-detail.wxss */

articlecontainer {
  display: flex;
  flex-direction: column;
}

.headpic {
  width: 100%;
}

.headpic>image {
  width: 100%;
}

.audio {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 15%;
  margin-left: 42%;
  opacity: 0.4;
}

.avir {
  display: flex;
  flex-direction: row;
  margin: 40rpx 0rpx 40rpx 20rpx;
}

.avir>image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.avir>text {
  font-size: 26rpx;
  color: gray;
  margin-top: 12rpx;
  margin-right: 20rpx;
}

.avir>view>text {
  font-size: 26rpx;
  color: gray;
}

.articledetail {
  margin: 0 20rpx 0 20rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.articledetail>.articletitle {
  font-size: 40rpx;
  font-weight: bolder;
  margin-bottom: 40rpx;
  text-align: left;
}

.articledetail>.likeornot {
  width: 100%;
  height: 130rpx;
  text-align: right;
}

.articledetail>.line {
  position: absolute;
  width: 95%;
  height: 3rpx;
  background-color: #e5e5e5;
  top: 128rpx;
}

.line+.likeornot {
  z-index: 0;
}

/* .articledetail>.likeornot{
  
   
