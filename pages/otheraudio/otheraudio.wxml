<!--pages/otheraudio/otheraudio.wxml-->
<camera device-position="front" flash="off" binderror="error" style="width: 100%; height: 300px;" mode='scanCode'></camera>
<button type="primary" bindtap="takePhoto">拍照</button>
<view>预览</view>
<!-- <image mode="widthFix" src=""></image> -->

<editor
  id="editor"
  class="ql-container"
  placeholder="这是一个文本编辑器"
  showImgSize
  showImgToolbar
  showImgResize
  bindstatuschange="onStatusChange"
  read-only="true"
  bindready="onEditorReady">
</editor>

<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section section_gap">
    <view class="section__title">switch</view>
    <switch name="switch"/>
  </view>
  <view class="section section_gap">
    <view class="section__title">slider</view>
    <slider name="slider" show-value ></slider>
  </view>

  <view class="section">
    <view class="section__title">input</view>
    <input name="input" placeholder="please input here" />
  </view>
  <view class="section section_gap">
    <view class="section__title">radio</view>
    <radio-group name="radio-group">
      <label><radio value="radio1"/>radio1</label>
      <label><radio value="radio2"/>radio2</label>
    </radio-group>
  </view>
  <view class="section section_gap">
    <view class="section__title">checkbox</view>
    <checkbox-group name="checkbox">
      <label><checkbox value="checkbox1"/>checkbox1</label>
      <label><checkbox value="checkbox2"/>checkbox2</label>
    </checkbox-group>
  </view>
  <view class="btn-area">
    <button form-type="submit">Submit</button>
    <button form-type="reset">Reset</button>
  </view>
</form>

<view class='section'>
<view>日期选择器</view>
  <picker mode='date' value='2013-08-06' start='2013-08-06' end='2023-08-06' fields='day' bindchange='onCurrentChoose'>
  <view>
    当前选择日期:{{currentday}}
  </view>
  </picker>
</view>

